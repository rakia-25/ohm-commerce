<% content_for :title, @product.name %>
<% content_for :description, @product.description&.truncate(160) %>

<!-- Breadcrumb -->
<nav class="bg-gray-50 border-b" aria-label="Breadcrumb">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-12">
      <ol class="flex items-center space-x-2 text-sm">
        <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        <% end %>
        <span class="text-gray-400">/</span>
        <%= link_to "Produits", root_path(anchor: "produits"), class: "text-gray-500 hover:text-gray-700" %>
        <span class="text-gray-400">/</span>
        <% if @product.category %>
          <%= link_to @product.category.name, "#", class: "text-gray-500 hover:text-gray-700" %>
          <span class="text-gray-400">/</span>
        <% end %>
        <span class="text-gray-900 font-medium"><%= @product.name %></span>
      </ol>
    </div>
  </div>
</nav>

<!-- Détail du produit -->
<section class="py-12 sm:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-x-8">
      <!-- Galerie d'images -->
      <div class="relative">
        <div class="aspect-w-4 aspect-h-3 rounded-2xl overflow-hidden bg-gray-100">
          <% if @product.image.attached? %>
            <%= image_tag @product.image.variant(resize_to_limit: [800, 600]), 
                class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Informations produit -->
      <div class="mt-10 lg:mt-0">
        <div class="flex items-center justify-between">
          <h1 class="text-3xl font-bold text-gray-900"><%= @product.name %></h1>
          <% if @product.category %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
              <%= @product.category.name %>
            </span>
          <% end %>
        </div>

        <!-- Prix -->
        <div class="mt-6">
          <h2 class="sr-only">Information produit</h2>
          <div class="flex items-baseline">
            <p class="text-4xl font-bold text-gray-900">
              <%= number_to_currency(@product.price_cents.to_f / 100, unit: "FCFA") %>
            </p>
            <span class="text-sm text-gray-500 ml-2">/ <%= @product.unit %></span>
          </div>
        </div>

        <!-- Description -->
        <div class="mt-6">
          <h3 class="text-lg font-medium text-gray-900">Description</h3>
          <div class="mt-4 prose prose-indigo">
            <p class="text-gray-600"><%= @product.description %></p>
          </div>
        </div>

        <!-- Commander -->
        <div class="mt-10">
          <%= link_to "https://wa.me/227XXXXXXXX?text=Bonjour, je souhaite commander #{@product.name} au prix de #{number_to_currency(@product.price_cents.to_f / 100, unit: 'FCFA')}", 
              target: "_blank",
              class: "w-full flex items-center justify-center px-6 py-4 bg-indigo-600 hover:bg-indigo-700 text-white text-lg font-medium rounded-xl transition-colors group" do %>
              <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Commander sur WhatsApp
              <span class="ml-2 opacity-0 group-hover:opacity-100 transform group-hover:translate-x-1 transition-all">→</span>
          <% end %>
        </div>

        <!-- Caractéristiques -->
        <div class="mt-10">
          <h3 class="text-lg font-medium text-gray-900">Points clés</h3>
          <div class="mt-4">
            <ul class="space-y-3">
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Produit de première nécessité
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Qualité garantie
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Prix abordable
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Produits similaires -->
    <% if @related_products.any? %>
      <div class="mt-20">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Produits similaires</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <% @related_products.each do |product| %>
            <div class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300">
              <div class="aspect-w-4 aspect-h-3 relative overflow-hidden rounded-t-xl">
                <% if product.image.attached? %>
                  <%= image_tag product.image.variant(resize_to_limit: [400, 300]),
                      class: "w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" %>
                <% end %>
              </div>

              <div class="p-4">
                <h3 class="font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors">
                  <%= link_to product.name, public_product_path(product.slug) %>
                </h3>

                <div class="mt-2 flex items-center justify-between">
                  <p class="font-bold text-indigo-600">
                    <%= number_to_currency(product.price_cents.to_f / 100, unit: "FCFA") %>
                  </p>
                  <%= link_to public_product_path(product.slug), 
                      class: "text-gray-400 hover:text-indigo-600 transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
