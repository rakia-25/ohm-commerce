<div class="max-w-6xl mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Dashboard Admin</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="bg-white rounded shadow p-4">
            <h2 class="text-lg font-semibold">Catégories</h2>
            <p class="text-2xl">
                <%= @categories_count %>
            </p>
            <%= link_to "Gérer les catégories" , admin_categories_path, class: "text-indigo-600" %>
        </div>
        <div class="bg-white rounded shadow p-4">
            <h2 class="text-lg font-semibold">Produits</h2>
            <p class="text-2xl">
                <%= @products_count %>
            </p>
            <%= link_to "Gérer les produits" , admin_products_path, class: "text-indigo-600" %>
        </div>
    </div>
</div>